<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Icono de usuario -->
    <ImageView
        android:id="@+id/iconoUsuario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Nombre del contacto -->
    <TextView
        android:id="@+id/nombreContacto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Felipe Gomez"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/iconoUsuario"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/seleccionarButton"/>

    <!-- Relación del contacto -->
    <TextView
        android:id="@+id/relacionContacto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hermano"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/iconoUsuario"
        app:layout_constraintTop_toBottomOf="@id/nombreContacto"
        app:layout_constraintEnd_toStartOf="@id/seleccionarButton"/>

    <!-- Botón de Seleccionar -->
    <Button
        android:id="@+id/seleccionarButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAppearance="@style/TextAppearance.Material3.LabelSmall" />
</androidx.constraintlayout.widget.ConstraintLayout>
