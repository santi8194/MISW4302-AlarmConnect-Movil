<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.alarmconnect.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_navigation_alarms_to_createAlarmFragment"
            app:destination="@id/createAlarmFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_circulo"
        android:name="com.example.alarmconnect.ui.circulo.CirculoFragment"
        android:label="@string/title_circulo"
        tools:layout="@layout/fragment_circulo" />
    <fragment
        android:id="@+id/createAlarmFragment"
        android:name="com.example.alarmconnect.ui.createalarm.CreateAlarmFragment"
        android:label="Crear Alarma" />
</navigation>